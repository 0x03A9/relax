{
	"typescript.tsdk": "./node_modules/typescript/lib",
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/tmp": true,
		"**/dist": true
	},
	"tslint.autoFixOnSave": true,
	"tslint.alwaysShowRuleFailuresAsWarnings": true,
	"cSpell.language": "en,de",
	"cSpell.ignorePaths": [
		"**/node_modules/**",
		"**/vscode-extension/**",
		"**/.git/**",
		".vscode",
		"typings",
		"package.json",
		"Gruntfile.js",
		"webpack.config.js",
		"tsconfig.json"
	]
}